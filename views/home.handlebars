<div class="conteudo">
    <div class="main">
        <div class="post-list">
            {{#each posts}}
                <h1>{{titulo}}</h1>
                <p>{{conteudo}}</p>
                <a href="deletar/{{id}}"><buttom>Deletar</buttom></a>
                <hr>
            {{/each}}
        </div>
    </div>
    <div class="aside">
        <div class="aside-pesquisar">
            <form>
                <input type="text">
                <button>pesquisar</button>
            </form>
        </div>
        <div class="aside-posts-recentes">
            <ul>
                <li>Post 1</li>
                <li>Post 2</li>
                <li>Post 3</li>
                <li>Post 4</li>
            </ul>
        </div>
        <div id="categorias">

        </div>
    </div>
</div>